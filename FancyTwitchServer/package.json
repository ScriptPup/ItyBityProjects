{
  "name": "fancy-twitch-server-builder",
  "version": "1.0.0",
  "description": "Provides an easy way to build FancyTwitchServer, or run various other operations from the top level",
  "main": "app/electron/app.js",
  "scripts": {
    "pack": "electron-builder",
    "start-electron": "electron .",
    "clean": "rimraf dist",
    "clean-tests": "rimraf test_variables.acebase",
    "build-electron": "tsc -p electron/tsconfig.json --pretty",
    "build-server": "tsc -p tsconfig.json --pretty",
    "build-client": "npx webpack",
    "build": "npm-run-all build-server build-client --parallel",
    "watch:build-server": "tsc -p tsconfig.json --watch",
    "watch:build-client": "npx webpack --watch --progress",
    "watch:build": "npm-run-all --parallel watch:build-server watch:build-client",
    "server-start": "node ./app/server.js",
    "server": "npm-run-all clean build-server server-start",
    "server-watch": "nodemon --watch",
    "watch:server": "npm-run-all --parallel watch:build-server server-watch",
    "start": "npm-run-all clean --parallel watch:build watch:server --print-label",
    "run-tests": "mocha --require './register.ts-auto-mock.js' --watch-extensions ts,tsx 'test/**/*.test.{ts,tsx}'",
    "test": "npm-run-all clean-tests run-tests clean-tests",
    "server-logs": "Type .\\app\\logs\\Server.log | pino-pretty",
    "listener-logs": "Type .\\app\\server\\logs\\FancyCommandListener.log | pino-pretty",
    "test-logs": "Type .\\app\\test\\logs\\FancyCommandListener.test.log | pino-pretty",
    "clear-logs": "rimraf .\\app\\server\\logs\\FancyCommandParser.log",
    "build-test": "npm-run-all build-server clear-logs test",
    "build-css": "sass app/content/scss:app/content/style"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ScriptPup/ItyBityProjects.git"
  },
  "keywords": [
    "OBS",
    "server",
    "node",
    "twitch"
  ],
  "author": "ScriptPup",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ScriptPup/ItyBityProjects/issues"
  },
  "homepage": "https://github.com/ScriptPup/ItyBityProjects#readme",
  "devDependencies": {
    "chai": "^4.3.6",
    "electron": "^23.1.4",
    "electron-builder": "^23.6.0",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^9.1.1",
    "rimraf": "^3.0.2",
    "sass": "^1.59.3",
    "socket.io-client": "^4.5.2",
    "ts-auto-mock": "^3.6.2",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "webpack-cli": "^5.0.0"
  }
}
