{
  "name": "obs-local-server",
  "version": "1.0.0",
  "description": "Provides a quick and easy way to server up data to my local OBS",
  "main": "server.js",
  "scripts": {
    "clean": "rimraf dist",
    "build-server": "tsc -p tsconfig.json --pretty",
    "build-client": "npx webpack",
    "build": "npm-run-all build-server build-client --parallel",
    "watch:build-server": "tsc -p tsconfig.json --watch",
    "watch:build-client": "npx webpack --watch --progress",
    "watch:build": "npm-run-all --parallel watch:build-server watch:build-client",
    "watch:server": "nodemon --watch",
    "start": "npm-run-all clean build --parallel watch:build watch:server --print-label",
    "test": "mocha --require './register.ts-auto-mock.js' --watch-extensions ts,tsx 'test/**/*.test.{ts,tsx}'",
    "logs": "Type .\\server\\logs\\FancyCommandParser.log | pino-pretty",
    "test-logs": "Type .\\test\\logs\\FancyCommandListener.test.log | pino-pretty",
    "clear-logs": "rimraf .\\server\\logs\\FancyCommandParser.log",
    "build-test": "npm-run-all build clear-logs test",
    "build-css": "node-sass --recursive --watch content/scss --output content/style"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ScriptPup/ItyBityProjects.git"
  },
  "keywords": [
    "OBS",
    "server",
    "node",
    "twitch"
  ],
  "author": "ScriptPup",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/ScriptPup/ItyBityProjects/issues"
  },
  "homepage": "https://github.com/ScriptPup/ItyBityProjects#readme",
  "devDependencies": {
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.11.10",
    "@types/socket.io": "^3.0.2",
    "@types/tmi.js": "^1.8.1",
    "chai": "^4.3.6",
    "mocha": "^10.1.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "socket.io-client": "^4.5.2",
    "ts-auto-mock": "^3.6.2",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "acebase": "^1.25.1",
    "pino": "^8.7.0",
    "socket.io": "^4.5.2",
    "tmi.js": "^1.8.5"
  }
}
